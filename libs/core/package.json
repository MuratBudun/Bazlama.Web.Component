{
  "name": "bazlama-web-component",
  "private": false,
  "version": "0.0.5",
  "type": "module",
  "description": "A lightweight, TypeScript-first Web Component framework with decorators, property management, and event handling",
  "keywords": [
    "bazlama",
    "web-component",
    "web-components",
    "custom-elements",
    "decorators",
    "typescript",
    "javascript",
    "shadow-dom",
    "frontend",
    "ui-components",
    "component-library"
  ],
  "author": "Murat Budun <muratbudun@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nicefella/Bazlama.Web.Component#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicefella/Bazlama.Web.Component.git"
  },
  "bugs": {
    "url": "https://github.com/nicefella/Bazlama.Web.Component/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "main": "./dist/bazlama-web-component.cjs.js",
  "module": "./dist/bazlama-web-component.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bazlama-web-component.es.js",
      "require": "./dist/bazlama-web-component.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],

  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vite-plugin-dts": "^4.0.0-beta.1"
  }
}
